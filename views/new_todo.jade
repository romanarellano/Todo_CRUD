doctype
html(lang="en")
head
  meta(charset="UTF-8")
  title ToDO!
body
  form(action="/todos",method="POST")
    fieldset
      div
        label(for="title") Title:
        br 
        input#title_name(type="text",name="title",placeholder="Title")
        br
        br 
      div
        label(for="is_done")
        input(type="hidden" name="is_done" value=false)
      div
        label(for="created_at")
        input(type="hidden" name="created_at" value="")
      div
        label(for="description") Description:
        br
        textarea#todo_description(name="description" placeholder="Description" rows="8" columns="40")
      div
        br
        input(type="submit", value="Submit")